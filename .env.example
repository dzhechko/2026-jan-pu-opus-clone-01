# Database
DATABASE_URL=postgresql://clipmaker:clipmaker@localhost:5432/clipmaker

# Redis
REDIS_URL=redis://localhost:6379

# NextAuth
NEXTAUTH_SECRET=change-me-in-production
NEXTAUTH_URL=http://localhost:3000

# BYOK encryption (64 hex chars = 32 bytes AES-256 key)
PLATFORM_TOKEN_SECRET=

# VK OAuth
VK_CLIENT_ID=
VK_CLIENT_SECRET=

# Cloud.ru AI (server-side, RU strategy)
CLOUDRU_API_KEY=
CLOUDRU_BASE_URL=https://foundation-models.api.cloud.ru/v1

# S3-compatible storage (Cloud.ru Evolution)
# Docs: https://cloud.ru/docs/s3e/ug/topics/api__api-key?source-platform=Evolution
S3_ENDPOINT=https://s3.cloud.ru
S3_REGION=ru-central-1
S3_TENANT_ID=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=clipmaker

# YooKassa payments
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# Global AI providers (optional, for shared keys)
GEMINI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OPENROUTER_API_KEY=

# S3 proxy mode (set to "true" in dev/Codespace where S3 is not publicly accessible)
# When false, clips use presigned S3 URLs (better for production)
NEXT_PUBLIC_USE_S3_PROXY=false

# App
NODE_ENV=development
